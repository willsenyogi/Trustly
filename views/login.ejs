<div style="display: flex; justify-content: center; align-items: center; height: 100vh; flex-direction: row; width: 100vw; flex-wrap: wrap;">
  <img src="/assets/trustly-logo.png">
  <form method="post" action="/login/submit" style="display: flex; flex-direction: column; gap: 10px;">
    <div>
      <p>Email Address</p>
      <input name="email" style="width: 300px; height: 40px; border-radius: 20px;" type="text" required />
    </div>
    <div>
      <p>Password</p>
      <input name="password" style="width: 300px; height: 40px; border-radius: 20px;" type="password" required />
      <a href="/signup" style="text-decoration: none; color: white;"><p>Don't have an account?</p></a>
    </div>
    <button type = "submit" style="width: 100px; height: 40px; border-radius: 20px; color: black; background-color: whitesmoke; border: none;">
      Submit
    </button>
  </form>
</div>